%header
  %div{:class => "px-3 py-2 border-bottom mb-3"}
    %div{:class => "container d-flex flex-wrap justify-content-center"}
      %div{:class => "col-12 col-lg-auto mb-2 mb-lg-0 me-lg-auto"}
        %ul.nav.me-auto
          %li.nav-item
            -if user_signed_in?
              =link_to"Patient Clinic", root_path, :class=>"nav-link link-body-emphasis px-2 active link-dark"
            -elsif user_signed_in?
              =link_to"Doctor Clinic", root_path, :class=>"nav-link link-body-emphasis px-2 active link-dark"
            else
              =link_to"Clinic", root_path, :class=>"nav-link link-body-emphasis px-2 active link-dark"
          %li.nav-item
            =link_to "Doctors", categories_path, :class=>"nav-link link-body-emphasis px-2 active link-dark"
      %div{:class => "text-end"}
        -if user_signed_in?
          =link_to current_user.name, current_user, :class=>"btn btn-light text-dark me-2"
          =link_to "Sign out", destroy_user_session_path, class:"btn btn-light text-dark me-2", data: { turbo_method: :delete }
        -elsif doctor_signed_in?
          =link_to current_doctor.name, current_doctor, :class=>"btn btn-light text-dark me-2"
          =link_to "Sign out", destroy_doctor_session_path, class:"btn btn-light text-dark me-2", data: { turbo_method: :delete }
        -else
          
          =link_to("Log in", new_user_session_path, {:class=>"btn btn-light text-dark me-2"})
          =link_to("Sign up", new_user_registration_path, {:class=>"btn btn-light text-dark me-2"})
          %div.vr.me-2
          =link_to("Log in for doctor", new_doctor_session_path, {:class=>"btn btn-light text-dark me-2"})
          =link_to("Sign up for doctor", new_doctor_registration_path, {:class=>"btn btn-light text-dark me-2"})

          
